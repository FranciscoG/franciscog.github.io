---
layout: layouts/base.njk
---
{%- if syntax -%}
{# Only include the syntax highlighter CSS on blog posts that ask for it #}
{%- css "syntax" %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss -%}
{%- css "syntax2" %}{% include "public/css/prism-diff.css" %}{% endcss -%}
{%- endif -%}
<article class="post">

	<header class="post-header">
		{%- if tags.includes("drafts") %}
			<h2 class="post-draft">DRAFT</h2>
		{%- endif %}
		<h1>{{ title }}</h1>
		<ul class="post-metadata">
			<li class="post-date"><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li>
			{% if updated %}
			<li class="post-updated"><b>Updated:</b>&nbsp;<time datetime="{{ updated | htmlDateString }}">{{ updated | readableDate }}</time></li>
			{% endif %}
			{%- for tag in tags | filterTagList %}
			{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
			<li class="post-tag"><a href="{{ tagUrl }}" class="post-tag-link">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
			{%- endfor %}
		</ul>
	</header>
	{% if content | toc %}
	<nav id="post-toc" class="post-toc" aria-labelledby="toc-heading">
		<h2 id="toc-heading">Table of Contents</h2>
		{{ content | toc | safe }}
	</nav>
	{% endif %}
	<section class="post-content">
		{{ content | safe }}
	</section>

</article>

{%- if collections.posts %}
	{%- set previousPost = collections.posts | getPreviousCollectionItem %}
	{%- set nextPost = collections.posts | getNextCollectionItem %}
	{%- if nextPost or previousPost %}
		<ul class="links-nextprev">
			{%- if previousPost %}<li><span>Previous:</span> <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
			{%- if nextPost %}<li><span>Next:</span> <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
		</ul>
	{%- endif %}
{%- endif %}


{% js %}
<script src="/js/post.js"></script>
{% endjs %}

{% css %}
@view-transition {
	navigation: auto;
}
{% endcss %}