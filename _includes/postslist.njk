{%- css %}
  .postlist { 
    counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} 
  }
{% endcss %}
<ol reversed class="postlist">
{% for post in postslist | reverse %}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %} {% if post.data.tags.includes("drafts") %}postlist-item-draft{% endif %}">
		<a href="{{ post.url }}" class="postlist-link">
      {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
    </a>
    {% if post.data.tags.includes("drafts") %}<span class="postlist-draft">DRAFT</span>{% endif %}
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL d yyyy") }}</time>
	</li>
{% endfor %}
</ol>