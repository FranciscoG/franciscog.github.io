  padding: 0
  overflow hidden;
  font-size: 16px;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
}
  
main {
  position: relative;
}

canvas { 
  position:absolute; 
  display block
}

#terminal {
  color: #fff;
  font-family: $terminal_font 
  font-size: 2em; 
  overflow-y: scroll;
  height: 300px;
  background-color: transparent;
  padding: 20px;
}

